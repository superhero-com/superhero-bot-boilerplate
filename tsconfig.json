{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "noUnusedLocals": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_modules/@aeternity/aepp-sdk/src/typings"
    ]
  },
  "include": ["src/**/*"]
}
